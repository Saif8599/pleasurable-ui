{% render 'partials/head.liquid' %}

<header class="hero">
  <picture>
    <source type="image/avif" srcset="https://fdnd-agency.directus.app/assets/{{ headerImage }}?format=avif&width=1600">
    <source type="image/webp" srcset="https://fdnd-agency.directus.app/assets/{{ headerImage }}?format=webp&width=1600">
    <img src="https://fdnd-agency.directus.app/assets/{{ headerImage }}?width=1600" alt="{{ headerTitle }}" width="1600" height="900">
  </picture>
  <div class="overlay"></div>
  <h1>{{ headerTitle }}</h1>
</header>

<style>
.hero {
  height: 85vh;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
  color: white;
  isolation: isolate;
}

.hero picture,
.hero img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
  filter: brightness(0.85) contrast(1.05);
}

.hero .overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(120deg, rgba(20, 20, 20, 0.4), rgba(0, 0, 0, 0.3));
  backdrop-filter: blur(2px);
  z-index: 1;
  mix-blend-mode: overlay;
}

.hero h1 {
  font-size: var(--font-size-mobile-xl);
  z-index: 3;
  text-align: center;
  backdrop-filter: blur(1.5px);
}

@media (min-width: 769px) {
  .hero {
    height: 70vh;
  }

  .hero h1 {
    font-size: var(--font-size-desktop-xl);
    max-width: 80%;
  }
}

</style>
{% render 'partials/head.liquid' %}

<header class="hero">
  <picture>
    <source type="image/avif" srcset="https://fdnd-agency.directus.app/assets/{{ headerImage }}?format=avif&width=1600">
    <source type="image/webp" srcset="https://fdnd-agency.directus.app/assets/{{ headerImage }}?format=webp&width=1600">
    <img src="https://fdnd-agency.directus.app/assets/{{ headerImage }}?width=1600" alt="{{ headerTitle }}" width="1600" height="900">
  </picture>
  <div class="overlay"></div>
  <h1>{{ headerTitle }}</h1>
</header>

<style>
.hero {
  height: 85vh;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hero picture,
.hero img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero h1 {
  font-size: var(--font-size-mobile-xl);
  z-index: 1;
}

@media (min-width: 769px) {
  .hero {
    height: 70vh;
  }

  .hero h1 {
    font-size: var(--font-size-desktop-xl);
    max-width: 80%;
  }
}
</style> 